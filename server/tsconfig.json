{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "..",
    "skipLibCheck": true,
    "sourceMap": false,
    "target": "es6",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "../dist/**/*",
    "../node_modules/**/*",
    "../tmp/**/*"
  ],
    "files": [
        "index.ts"
    ]
}
