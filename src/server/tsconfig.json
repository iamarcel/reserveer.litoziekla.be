{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "..",
    "outDir": "build",
    "skipLibCheck": true,
    "sourceMap": false,
    "target": "es6",
    "lib": [
      "es2017"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "files": [
    "index.ts"
  ]
}
