{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "build",
    "skipLibCheck": true,
    "sourceMap": false,
    "target": "es5",
    "lib": [
      "es2016",
      "es2017",
      "esnext"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "files": [
    "server/index.ts"
  ]
}
